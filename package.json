{
  "name": "@yoursurprise/slider",
  "version": "1.0.0",
  "description": "Basic React slider using modern Javascript and CSS",
  "module": "dist/module.js",
  "main": "dist/index.js",
  "targets": {
    "main": false,
    "module": false
  },
  "files": [
    "src/*",
    "dist/*"
  ],
  "scripts": {
    "test": "jest src/",
    "e2e-tests": "npx playwright test",
    "e2e-tests-ui": "npx playwright test --ui",
    "lint": "biome lint src/",
    "lint-fix": "biome lint src/ --fix",
    "build": "rm -rf ./dist && rollup -c --bundleConfigAsCjs",
    "tsc": "tsc -p tsconfig-check.json",
    "build-pages": "rm -rf ./dist && parcel build index.html --public-url ./",
    "watch": "rollup -c -w --bundleConfigAsCjs",
    "serve": "parcel index.html",
    "deploy-pages": "gh-pages -d dist"
  },
  "dependencies": {
    "classnames": "^2.5.1"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@biomejs/biome": "2.3.10",
    "@parcel/transformer-sass": "^2.16.3",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript/lib-dom": "npm:@types/web@^0.0.306",
    "babel-jest": "^30.2.0",
    "gh-pages": "^6.3.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "npm": "^11.7.0",
    "parcel": "^2.16.3",
    "postcss": "^8.5.6",
    "process": "^0.11.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-test-renderer": "^19.2.3",
    "rollup": "^4.54.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-styler": "^2.0.0",
    "sass": "^1.97.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "rollup-plugin-styler": {
      "query-string": "^7.1.3"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/YourSurpriseCom/slider.git"
  },
  "keywords": [
    "slider",
    "scroll",
    "snap",
    "touch",
    "react"
  ],
  "author": "YourSurprise",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/YourSurpriseCom/slider/issues"
  },
  "homepage": "https://github.com/YourSurpriseCom/slider#readme"
}
