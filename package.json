{
  "name": "@yoursurprise/slider",
  "version": "1.0.0",
  "description": "Basic React slider using modern Javascript and CSS",
  "module": "dist/module.js",
  "main": "dist/index.js",
  "targets": {
    "main": false,
    "module": false
  },
  "files": [
    "src/*",
    "dist/*"
  ],
  "scripts": {
    "test": "jest src/",
    "e2e-tests": "npx playwright test",
    "e2e-tests-ui": "npx playwright test --ui",
    "lint": "eslint src/",
    "build": "rm -rf ./dist && rollup -c --bundleConfigAsCjs",
    "tsc": "tsc -p tsconfig-check.json",
    "build-pages": "rm -rf ./dist && parcel build index.html --public-url ./",
    "watch": "rollup -c -w --bundleConfigAsCjs",
    "serve": "parcel index.html",
    "deploy-pages": "gh-pages -d dist"
  },
  "dependencies": {
    "classnames": "^2.3.2"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@parcel/transformer-sass": "^2.8.3",
    "@playwright/test": "^1.36.2",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@typescript/lib-dom": "npm:@types/web@^0.0.194",
    "babel-jest": "^29.5.0",
    "eslint": "^9.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "gh-pages": "^6.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "npm": "^11.1.0",
    "parcel": "^2.8.3",
    "postcss": "^8.4.18",
    "process": "^0.11.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-test-renderer": "^19.0.0",
    "rollup": "^4.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-styler": "^2.0.0",
    "sass": "^1.60.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "overrides": {
    "rollup-plugin-styler": {
      "query-string": "^7.1.3"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/YourSurpriseCom/slider.git"
  },
  "keywords": [
    "slider",
    "scroll",
    "snap",
    "touch",
    "react"
  ],
  "author": "YourSurprise",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/YourSurpriseCom/slider/issues"
  },
  "homepage": "https://github.com/YourSurpriseCom/slider#readme"
}
